{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1>Product index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>PriceCurrency</th>
                <th>Height</th>
                <th>Width</th>
                <th>Depth</th>
                <th>Picture</th>
                <th>Url</th>
                <th>PartnerProductId</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.priceCurrency }}</td>
                <td>{{ product.height }}</td>
                <td>{{ product.width }}</td>
                <td>{{ product.depth }}</td>
                <td>{{ product.picture }}</td>
                <td>{{ product.url }}</td>
                <td>{{ product.partnerProductId }}</td>
                <td>
                    <a href="{{ path('product_show', {'id': product.id}) }}">show</a>
                    <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('product_new') }}">Create new</a>
{% endblock %}
